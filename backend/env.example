# Flask IDS Backend Environment Variables
# Copy this file to .env and update with your values

# Flask Configuration
SECRET_KEY=your-secret-key-here
DEBUG=true
FLASK_HOST=0.0.0.0
FLASK_PORT=3002

# MongoDB Configuration
# MongoDB connection string (use placeholder; replace with your Atlas or local URI)
MONGODB_URI=mongodb://user:password@host:27017/

# MongoDB database name
MONGODB_DATABASE_NAME=ids_db

# For local MongoDB development:
# MONGODB_URI=mongodb://localhost:27017/
# MONGODB_DATABASE_NAME=ids_db

# Detection Thresholds
PACKET_RATE_THRESHOLD=1000
CONNECTION_LIMIT=100
ANOMALY_SCORE_THRESHOLD=0.5

# Packet Capture Settings
CAPTURE_INTERFACE=any
CAPTURE_TIMEOUT=1

# Alert Settings
ALERT_DEDUP_WINDOW=300
MAX_ALERTS_PER_HOUR=100

# ML Model Settings
MODEL_RETRAIN_INTERVAL=3600
MIN_SAMPLES_FOR_TRAINING=100

# Supervised ML Classification Settings (default: pre-trained SecIDS-CNN only)
CLASSIFICATION_ENABLED=true
# secids_cnn (default, pre-trained), random_forest, xgboost, svm, logistic_regression
CLASSIFICATION_MODEL_TYPE=secids_cnn
# Optional: path to SecIDS-CNN.h5 when CLASSIFICATION_MODEL_TYPE=secids_cnn (default: project_root/SecIDS-CNN/SecIDS-CNN.h5)
# SECIDS_MODEL_PATH=
MIN_TRAINING_SAMPLES_CLASSIFICATION=1000
TRAIN_TEST_SPLIT_RATIO=0.7
HYPERPARAMETER_TUNING_ENABLED=false
CLASSIFICATION_CONFIDENCE_THRESHOLD=0.7

# Whitelist IPs (comma-separated)
WHITELIST_IPS=127.0.0.1,10.0.0.0/8,192.168.0.0/16

# Logging
LOG_LEVEL=INFO

# AWS Configuration
AWS_REGION=us-east-1

