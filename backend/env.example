# Flask IDS Backend Environment Variables
# Copy this file to .env and update with your values

# Flask Configuration
SECRET_KEY=your-secret-key-here
DEBUG=true

# Database Configuration
# For local development with SQLite:
DATABASE_URL=sqlite:///ids.db

# For AWS RDS PostgreSQL:
# DATABASE_URL=postgresql://username:password@your-rds-endpoint.amazonaws.com:5432/ids_db

# Detection Thresholds
PACKET_RATE_THRESHOLD=1000
CONNECTION_LIMIT=100
ANOMALY_SCORE_THRESHOLD=0.5

# Packet Capture Settings
CAPTURE_INTERFACE=any
CAPTURE_TIMEOUT=1

# Alert Settings
ALERT_DEDUP_WINDOW=300
MAX_ALERTS_PER_HOUR=100

# ML Model Settings
MODEL_RETRAIN_INTERVAL=3600
MIN_SAMPLES_FOR_TRAINING=100

# Whitelist IPs (comma-separated)
WHITELIST_IPS=127.0.0.1,10.0.0.0/8,192.168.0.0/16

# Logging
LOG_LEVEL=INFO

# AWS Configuration
AWS_REGION=us-east-1

# Development Database (optional override)
DEV_DATABASE_URL=sqlite:///ids_dev.db
