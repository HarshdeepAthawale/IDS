# Environment Variables for IDS Backend

# Server Configuration
PORT=5000
NODE_ENV=development

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000

# Packet Capture Configuration
CAPTURE_INTERFACE=any
CAPTURE_FILTER=
MAX_PACKETS_PER_FILE=10000
MAX_ALERTS_PER_FILE=5000

# Detection Thresholds
DOS_THRESHOLD_PACKETS_PER_SEC=100
DOS_TIME_WINDOW_MS=60000

PORT_SCAN_THRESHOLD_PORTS=20
PORT_SCAN_TIME_WINDOW_MS=10000

SUSPICIOUS_VOLUME_THRESHOLD_MB=10
SUSPICIOUS_VOLUME_TIME_WINDOW_MS=5000

# Alert Configuration
ALERT_DEDUPLICATION_WINDOW_MS=60000
MAX_ALERT_HISTORY_DAYS=30

# Logging
LOG_LEVEL=info
LOG_FILE=logs/ids.log

# Security
API_RATE_LIMIT=1000
API_RATE_WINDOW_MS=900000
