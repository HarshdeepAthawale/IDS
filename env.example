# Environment Variables for Custom IDS System
# Copy this file to .env and adjust values as needed

# ===========================================
# Server Configuration
# ===========================================
PORT=5000
NODE_ENV=development
FRONTEND_URL=http://localhost:3000

# ===========================================
# Packet Capture Configuration
# ===========================================
# Network interface to capture from (use 'any' for all interfaces)
CAPTURE_INTERFACE=any

# BPF filter for packet capture (empty = capture all)
CAPTURE_FILTER=

# Maximum packets per file before rotation
MAX_PACKETS_PER_FILE=10000

# Maximum alerts per file before rotation
MAX_ALERTS_PER_FILE=5000

# ===========================================
# Detection Thresholds
# ===========================================
# DoS Detection
DOS_THRESHOLD_PACKETS_PER_SEC=100
DOS_TIME_WINDOW_MS=60000

# Port Scan Detection
PORT_SCAN_THRESHOLD_PORTS=20
PORT_SCAN_TIME_WINDOW_MS=10000

# Suspicious Volume Detection
SUSPICIOUS_VOLUME_THRESHOLD_MB=10
SUSPICIOUS_VOLUME_TIME_WINDOW_MS=5000

# ===========================================
# Alert Configuration
# ===========================================
# Alert deduplication window (prevent duplicate alerts)
ALERT_DEDUPLICATION_WINDOW_MS=60000

# Maximum alert history retention (days)
MAX_ALERT_HISTORY_DAYS=30

# ===========================================
# Logging Configuration
# ===========================================
LOG_LEVEL=info
LOG_FILE=logs/ids.log

# ===========================================
# Security Configuration
# ===========================================
# API rate limiting
API_RATE_LIMIT=1000
API_RATE_WINDOW_MS=900000

# ===========================================
# Development/Testing
# ===========================================
# Enable packet streaming via WebSocket (for testing)
ENABLE_PACKET_STREAMING=false

# Test mode (generates sample data)
TEST_MODE=false

